{
  "name": "@pagent-libs/docs-core",
  "version": "0.1.0",
  "description": "Core document editor engine for pagent-docs",
  "repository": {
    "type": "git",
    "url": "https://github.com/pagentapp/pagent-libs.git",
    "directory": "packages/docs-core"
  },
  "bugs": {
    "url": "https://github.com/pagentapp/pagent-libs/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "document",
    "editor",
    "word-processor",
    "rich-text"
  ],
  "license": "MIT",
  "dependencies": {
    "immer": "^10.0.0",
    "prosemirror-model": "^1.19.0",
    "prosemirror-state": "^1.4.0",
    "prosemirror-transform": "^1.8.0",
    "prosemirror-schema-basic": "^1.2.0",
    "prosemirror-schema-list": "^1.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "rollup": "^4.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  }
}

